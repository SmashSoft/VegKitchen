@model IEnumerable<Category>

<h2> Category Details</h2>
<div class="container">

    <table class="table  table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr >
                    <td>@row.CategoryId</td>
                    <td>@row.Name</td>
                    <td>@row.Description</td>
                </tr>
            }

        </tbody>
    </table>

</div>